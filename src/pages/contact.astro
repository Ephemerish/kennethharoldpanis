---
import Layout from "../layouts/MainLayout.astro";
import { SubjectSelect } from "../components/SubjectSelect";
import { Toaster } from "../components/ui/sonner";
---

<Layout 
  title="Contact - Kenneth Harold Panis"
  description="Get in touch with Kenneth Harold Panis for collaboration, job opportunities, or project inquiries. Let's build something amazing together."
  image="/me.jpg"
  type="website"
>
  <div class="min-h-screen bg-hero-gradient relative overflow-hidden">
    <!-- Decorative background elements -->
    <div class="absolute inset-0">
      <div class="absolute top-0 right-0 w-96 h-96 bg-brand-100/20 rounded-full blur-3xl transform translate-x-1/3 -translate-y-1/3"></div>
      <div class="absolute bottom-0 left-0 w-96 h-96 bg-brand-50/30 rounded-full blur-3xl transform -translate-x-1/3 translate-y-1/3"></div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 sm:py-16 lg:py-20 relative">
      <!-- Header Section with Enhanced Design -->
      <div class="text-center mb-16 sm:mb-20 animate-fade-in">
        <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold mb-6">
          <span class="text-neutral-900">Let's</span> <span class="text-brand-gradient">Connect</span>
        </h1>
        <p class="text-xl sm:text-2xl text-neutral-700 max-w-4xl mx-auto leading-relaxed px-2 mb-8">
          I'm always interested in discussing new opportunities, collaborations, or just having a conversation about technology and development.
        </p>
        <div class="w-32 h-1 bg-brand-gradient mx-auto rounded-full"></div>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 sm:gap-16 lg:gap-20">
        <!-- Contact Form with Premium Styling -->
        <div class="bg-card-gradient rounded-3xl shadow-floating p-8 sm:p-10 lg:p-12 border border-neutral-200/50 order-2 lg:order-1 animate-slide-up">
          <div class="text-center mb-8">
            <h2 class="text-2xl sm:text-3xl font-bold text-neutral-900 mb-3">
              ðŸ’¬ Send me a message
            </h2>
            <p class="text-neutral-600">I'll get back to you within 24 hours</p>
            <div class="w-16 h-0.5 bg-brand-gradient mx-auto mt-4 rounded-full"></div>
          </div>
          
          <form class="space-y-6 sm:space-y-8" id="contact-form" method="POST">
            <!-- Name Field -->
            <div class="group">
              <label for="name" class="block text-sm font-semibold text-neutral-900 mb-3">
                Full Name *
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-4 border-2 border-neutral-300 rounded-xl focus:ring-2 focus:ring-brand-500/20 focus:border-brand-500 transition-all duration-300 hover:border-neutral-400 text-base bg-neutral-0/50 backdrop-blur-sm group-hover:shadow-sm"
                placeholder="Your full name"
              />
            </div>

            <!-- Email Field -->
            <div class="group">
              <label for="email" class="block text-sm font-semibold text-neutral-900 mb-3">
                Email Address *
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-4 border-2 border-neutral-300 rounded-xl focus:ring-2 focus:ring-brand-500/20 focus:border-brand-500 transition-all duration-300 hover:border-neutral-400 text-base bg-neutral-0/50 backdrop-blur-sm group-hover:shadow-sm"
                placeholder="your.email@example.com"
              />
            </div>

            <!-- Subject Field -->
            <div>
              <label for="subject" class="block text-sm font-semibold text-neutral-900 mb-3">
                Subject *
              </label>
              <SubjectSelect 
                client:load
                name="subject"
                required
              />
            </div>

            <!-- Message Field -->
            <div>
              <label for="message" class="block text-sm font-semibold text-neutral-900 mb-3">
                Message *
              </label>
              <textarea
                id="message"
                name="message"
                rows="5"
                required
                class="w-full px-4 py-4 border-2 border-neutral-300 rounded-xl focus:ring-2 focus:ring-brand-500/20 focus:border-brand-500 transition-all duration-300 hover:border-neutral-400 resize-vertical text-base bg-neutral-0/50 backdrop-blur-sm"
                placeholder="Tell me about your project, question, or how I can help you..."
              ></textarea>
            </div>

            <!-- Submit Button -->
            <button
              type="submit"
              class="w-full bg-brand-gradient text-white font-semibold py-4 px-6 rounded-xl hover:shadow-brand-lg transform hover:scale-[1.02] transition-all duration-300 shadow-brand text-base"
            >
              Send Message
            </button>
          </form>
        </div>

        <!-- Contact Information -->
        <div class="space-y-6 sm:space-y-8 order-1 lg:order-2">
          <!-- Contact Details -->
          <div class="bg-card-gradient rounded-2xl shadow-floating p-6 sm:p-8 border border-neutral-200/50 animate-slide-up">
            <h2 class="text-xl sm:text-2xl font-bold text-neutral-900 mb-4 sm:mb-6">Get in touch</h2>
            
            <div class="space-y-4 sm:space-y-6">
              <!-- Email -->
              <div class="flex items-start gap-3 sm:gap-4">
                <div class="w-10 h-10 sm:w-12 sm:h-12 bg-brand-100 rounded-lg flex items-center justify-center shrink-0">
                  <svg class="w-5 h-5 sm:w-6 sm:h-6 text-brand-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-neutral-900 text-sm sm:text-base">Email</h3>
                  <a href="mailto:kennethpanis24@gmail.com" class="text-brand-600 hover:text-brand-700 transition-colors text-sm sm:text-base break-all">
                    kennethpanis24@gmail.com
                  </a>
                </div>
              </div>

              <!-- Location -->
              <div class="flex items-start gap-3 sm:gap-4">
                <div class="w-10 h-10 sm:w-12 sm:h-12 bg-brand-100 rounded-lg flex items-center justify-center shrink-0">
                  <svg class="w-5 h-5 sm:w-6 sm:h-6 text-brand-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-neutral-900 text-sm sm:text-base">Location</h3>
                  <p class="text-neutral-600 text-sm sm:text-base">Philippines</p>
                  <p class="text-xs sm:text-sm text-neutral-500">Available for remote work worldwide</p>
                </div>
              </div>

              <!-- Response Time -->
              <div class="flex items-start gap-3 sm:gap-4">
                <div class="w-10 h-10 sm:w-12 sm:h-12 bg-brand-100 rounded-lg flex items-center justify-center shrink-0">
                  <svg class="w-5 h-5 sm:w-6 sm:h-6 text-brand-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-neutral-900 text-sm sm:text-base">Response Time</h3>
                  <p class="text-neutral-600 text-sm sm:text-base">Usually within 24 hours</p>
                  <p class="text-xs sm:text-sm text-neutral-500">Monday to Friday, 9 AM - 6 PM PHT</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Social Media Links -->
          <div class="bg-card-gradient rounded-2xl shadow-floating p-6 sm:p-8 border border-neutral-200/50 animate-slide-up">
            <h2 class="text-xl sm:text-2xl font-bold text-neutral-900 mb-4 sm:mb-6">Connect with me</h2>
            
            <div class="flex gap-4">
              <!-- LinkedIn -->
              <a
                href="https://www.linkedin.com/in/kenneth-harold-panis/"
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center gap-2 px-4 py-2 bg-white border-2 border-brand-600 text-brand-700 hover:bg-brand-50 hover:border-brand-700 hover:text-brand-800 rounded-lg transition-all duration-200 text-sm font-medium"
              >
