            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Form submission handling -->
  <script>
    // Import toast function dynamically
    async function showToast(type: 'success' | 'error', title: string, description: string) {
      try {
        const { toast } = await import('sonner');
        if (type === 'success') {
          toast.success(title, { description, duration: 5000 });
        } else {
          toast.error(title, { description, duration: 5000 });
        }
      } catch (error) {
        // Fallback to native notification
        alert(`${title}: ${description}`);
      }
    }

    // Handle form submission
    const form = document.getElementById('contact-form') as HTMLFormElement;
    if (form) {
      form.addEventListener('submit', async function(e) {
        e.preventDefault();
        
        const submitBtn = form.querySelector('button[type="submit"]') as HTMLButtonElement;
        const originalText = submitBtn.textContent;
        
        try {
          // Show loading state
          submitBtn.textContent = 'Sending...';
          submitBtn.disabled = true;
          
          // Prepare form data with proper content type
          const formData = new FormData(form);
          
          // Send to API route
          const response = await fetch('/api/contact', {
            method: 'POST',
            body: formData,
            // Don't set Content-Type header - let browser set it with boundary for FormData
          });
          
          const result = await response.json();
          
          if (result.success) {
            // Show success message with Sonner
            await showToast('success', 'Message sent successfully!', "I'll get back to you soon.");
            form.reset();
            
            // Trigger a custom event to reset the React component
            window.dispatchEvent(new CustomEvent('form-reset'));
          } else {
            throw new Error(result.error || 'Failed to send message');
          }
          
        } catch (error) {
          // Show error message with Sonner
          await showToast('error', 'Failed to send message', 'Please try again or email me directly.');
          console.error('Form submission error:', error);
        } finally {
          // Reset button
          submitBtn.textContent = originalText;
          submitBtn.disabled = false;
        }
      });
    }

    // Check for success parameter in URL (for Netlify compatibility)
    const urlParams = new URLSearchParams(window.location.search);
    if (urlParams.get('success') === 'true') {
      showToast('success', 'Message sent successfully!', "I'll get back to you soon.");
    }
  </script>

  <!-- Add Sonner Toaster -->
  <Toaster 
    client:load
    position="top-right"
    richColors
    closeButton
    expand={false}
    visibleToasts={3}
  />
</Layout>
