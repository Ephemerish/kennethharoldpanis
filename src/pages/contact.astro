                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center gap-2 px-4 py-2 bg-white border-2 border-brand-600 text-brand-700 hover:bg-brand-50 hover:border-brand-700 hover:text-brand-800 rounded-lg transition-all duration-200 text-sm font-medium"
