---
import Layout from "../layouts/MainLayout.astro";
import { HomeHeader } from "../components/HomeHeader";
import Card from "../components/Card.astro";
import MostRecentBlog from "../components/MostRecentBlog.astro";
import FeaturedProject from "../components/FeaturedProject.astro";
import { TechCarousel } from "../components/TechCarousel";
import { HOMEPAGE_BLOG_LIMIT, HOMEPAGE_PROJECTS_LIMIT } from "../constants";
import { categorizeTags, getAllTagsFromContent } from "../utils/tagCategorizer";

import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";

const allBlogs: CollectionEntry<"blog">[] = (
  await getCollection("blog")
).sort(
  (a: CollectionEntry<"blog">, b: CollectionEntry<"blog">) =>
    b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const allProjects: CollectionEntry<"projects">[] = (
  await getCollection("projects")
).sort((a, b) => {
  // Sort by featured first, then by end date (or start date if no end date)
  if (a.data.featured && !b.data.featured) return -1;
  if (!a.data.featured && b.data.featured) return 1;
  
  // Use endDate if available, otherwise use startDate
  const aDate = a.data.endDate || a.data.startDate;
  const bDate = b.data.endDate || b.data.startDate;
  
  return bDate.getTime() - aDate.getTime();
});

const mostRecentBlog: CollectionEntry<"blog"> = allBlogs[0];
const otherBlogs: CollectionEntry<"blog">[] = allBlogs.slice(1);
const featuredProject = allProjects[0]; // Get the first (most recent/featured) project
const otherProjects = allProjects.slice(1); // Get any additional projects

// Generate dynamic skill categories from project and blog tags
const allTags = getAllTagsFromContent(allProjects, allBlogs);
const skillCategories = categorizeTags(allTags);
---

<Layout 
  title="Kenneth Harold Panis - Full-Stack Developer & Designer"
  description="Full-stack developer and designer specializing in modern web technologies, IoT systems, and mobile applications. Creating beautiful and functional digital experiences."
  image="/me.jpg"
  type="website"
>
  <!-- Hero Section -->
  <HomeHeader client:load />
  
  <!-- Skills Section with Enhanced Design -->
  <section class="py-16 sm:py-20 bg-neutral-0 relative overflow-hidden">
    <!-- Decorative background elements -->
    <div class="absolute inset-0 bg-gradient-to-br from-neutral-50/30 to-neutral-100/20"></div>
    <div class="absolute top-0 right-0 w-96 h-96 bg-neutral-100/30 rounded-full blur-3xl transform translate-x-1/2 -translate-y-1/2"></div>
    
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
      <div class="text-center mb-12 sm:mb-16 animate-fade-in">
        <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold text-neutral-900 mb-4">
          Technologies I Work With
        </h2>
        <p class="mt-4 sm:mt-6 text-lg sm:text-xl text-neutral-700 max-w-3xl mx-auto px-2 leading-relaxed">
          With a Computer Engineering background, I bridge the gap between hardware and software, 
          creating comprehensive solutions from circuit design to web applications
        </p>
        <div class="w-24 h-1 bg-brand-gradient mx-auto mt-6 rounded-full"></div>
      </div>
      
      <div class="animate-slide-up">
        <TechCarousel categories={skillCategories} client:load />
      </div>
    </div>
  </section>

  <!-- Featured Projects Section with Enhanced Visual Design -->
  <section class="py-16 sm:py-20 bg-hero-gradient relative overflow-hidden">
    <!-- Decorative background elements -->
    <div class="absolute inset-0 bg-gradient-to-br from-brand-50/30 to-brand-100/20"></div>
    <div class="absolute bottom-0 left-0 w-96 h-96 bg-brand-100/30 rounded-full blur-3xl transform -translate-x-1/2 translate-y-1/2"></div>
    
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
      <div class="text-center mb-12 sm:mb-16">
        <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold text-neutral-900 mb-4">
          Featured <span class="text-brand-gradient">Projects</span>
        </h2>
        <p class="mt-4 sm:mt-6 text-lg sm:text-xl text-neutral-600 max-w-3xl mx-auto px-2 leading-relaxed">
          Take a look at my recent work and creative solutions that solve real-world problems
        </p>
        <div class="w-24 h-1 bg-brand-gradient mx-auto mt-6 rounded-full"></div>
      </div>
      
      <!-- Featured Project with Enhanced Styling -->
      {featuredProject && (
        <div class="mb-12 sm:mb-16 animate-fade-in">
          <div class="bg-card-gradient rounded-2xl p-6 sm:p-8 shadow-elegant hover-lift border border-neutral-200/50">
            <FeaturedProject project={featuredProject} />
          </div>
        </div>
      )}
      
      <!-- Other Projects Grid with Enhanced Cards -->
      {otherProjects.length > 0 && (
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 sm:gap-10 mb-8 sm:mb-12">
          {otherProjects
            .slice(0, HOMEPAGE_PROJECTS_LIMIT - 1)
            .map((project: CollectionEntry<"projects">) => (
              <div class="hover-lift animate-fade-in">
                <Card item={project} type="project" />
              </div>
            ))
          }
        </div>
      )}
      
      <div class="text-center">
        <a 
          href="/projects" 
          class="inline-flex items-center px-8 py-4 bg-brand-gradient text-neutral-0 text-base sm:text-lg font-semibold rounded-xl shadow-brand hover:shadow-brand-lg hover-lift transition-all duration-300"
        >
          View All Projects
          <svg class="ml-3 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Latest Blog Posts Section with Premium Design -->
  <section class="py-16 sm:py-20 bg-neutral-0 relative overflow-hidden">
    <!-- Subtle background pattern -->
    <div class="absolute bottom-0 left-0 w-96 h-96 bg-brand-50/40 rounded-full blur-3xl transform -translate-x-1/2 translate-y-1/2"></div>
    
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
      <div class="text-center mb-12 sm:mb-16">
        <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold text-neutral-900 mb-4">
          Latest from the <span class="text-brand-gradient">Blog</span>
        </h2>
        <p class="mt-4 sm:mt-6 text-lg sm:text-xl text-neutral-600 max-w-3xl mx-auto px-2 leading-relaxed">
          Thoughts on development, technology, and lessons learned along the way
        </p>
        <div class="w-24 h-1 bg-brand-gradient mx-auto mt-6 rounded-full"></div>
      </div>
      
      <!-- Featured Blog Post with Enhanced Styling -->
      <div class="mb-12 sm:mb-16 animate-fade-in">
        <div class="bg-card-gradient rounded-2xl p-6 sm:p-8 shadow-elegant hover-lift">
          <MostRecentBlog blog={mostRecentBlog} />
        </div>
      </div>
      
      <!-- Other Blog Posts Grid with Enhanced Cards -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 sm:gap-10 mb-8 sm:mb-12">
        {otherBlogs
          .slice(0, HOMEPAGE_BLOG_LIMIT)
          .map((blog) => (
            <div class="hover-lift animate-fade-in">
              <Card item={blog} type="blog" />
            </div>
          ))
        }
      </div>
      
      <div class="text-center">
        <a 
          href="/blogs" 
          class="inline-flex items-center px-8 py-4 bg-neutral-0 text-brand-600 text-base sm:text-lg font-semibold rounded-xl border-2 border-brand-500 hover:bg-brand-gradient hover:text-neutral-0 hover:shadow-brand-lg hover-lift transition-all duration-300"
        >
          Read All Posts
          <svg class="ml-3 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>
</Layout>
