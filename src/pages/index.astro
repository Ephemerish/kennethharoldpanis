---
import Layout from "../layouts/MainLayout.astro";
import { HomeHeader } from "../components/HomeHeader";
import Card from "../components/Card.astro";
import MostRecentBlog from "../components/MostRecentBlog.astro";
import FeaturedProject from "../components/FeaturedProject.astro";
import { TechCarousel } from "../components/TechCarousel";
import { HOMEPAGE_BLOG_LIMIT, HOMEPAGE_PROJECTS_LIMIT } from "../constants";
import { categorizeTags, getAllTagsFromContent } from "../utils/tagCategorizer";

import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";

const allBlogs: CollectionEntry<"blog">[] = (
  await getCollection("blog")
).sort(
  (a: CollectionEntry<"blog">, b: CollectionEntry<"blog">) =>
    b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const allProjects: CollectionEntry<"projects">[] = (
  await getCollection("projects")
).sort((a, b) => {
  // Sort by featured first, then by end date (or start date if no end date)
  if (a.data.featured && !b.data.featured) return -1;
  if (!a.data.featured && b.data.featured) return 1;
  
  // Use endDate if available, otherwise use startDate
  const aDate = a.data.endDate || a.data.startDate;
  const bDate = b.data.endDate || b.data.startDate;
  
  return bDate.getTime() - aDate.getTime();
});

const mostRecentBlog: CollectionEntry<"blog"> = allBlogs[0];
const otherBlogs: CollectionEntry<"blog">[] = allBlogs.slice(1);
const featuredProject = allProjects[0]; // Get the first (most recent/featured) project
const otherProjects = allProjects.slice(1); // Get any additional projects

// Generate dynamic skill categories from project and blog tags
const allTags = getAllTagsFromContent(allProjects, allBlogs);
const skillCategories = categorizeTags(allTags);
---

<Layout title={"Kenneth Harold Panis"}>
  <!-- Hero Section -->
  <HomeHeader client:load />
  
  <!-- Skills Section -->
  <section class="py-12 sm:py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-8 sm:mb-12">
        <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-gray-900">
          Technologies I Work With
        </h2>
        <p class="mt-3 sm:mt-4 text-base sm:text-lg text-gray-600 max-w-2xl mx-auto px-2">
          With a Computer Engineering background, I bridge the gap between hardware and software, 
          creating comprehensive solutions from circuit design to web applications
        </p>
      </div>
      
      <TechCarousel categories={skillCategories} client:load />
    </div>
  </section>

  <!-- Featured Projects Section -->
  <section class="py-12 sm:py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-8 sm:mb-12">
        <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-gray-900">
          Featured Projects
        </h2>
        <p class="mt-3 sm:mt-4 text-base sm:text-lg text-gray-600 max-w-2xl mx-auto px-2">
          Take a look at my recent work and creative solutions
        </p>
      </div>
      
      <!-- Featured Project -->
      {featuredProject && (
        <div class="mb-8 sm:mb-12">
          <FeaturedProject project={featuredProject} />
        </div>
      )}
      
      <!-- Other Projects -->
      {otherProjects.length > 0 && (
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8 mb-6 sm:mb-8">
          {otherProjects
            .slice(0, HOMEPAGE_PROJECTS_LIMIT - 1)
            .map((project: CollectionEntry<"projects">) => <Card item={project} type="project" />)
          }
        </div>
      )}
      
      <div class="text-center">
        <a 
          href="/projects" 
          class="inline-flex items-center px-6 py-3 border border-transparent text-sm sm:text-base font-medium rounded-lg text-white bg-blue-600 hover:bg-blue-700 transition-colors duration-200"
        >
          View All Projects
          <svg class="ml-2 w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Latest Blog Posts Section -->
  <section class="py-12 sm:py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-8 sm:mb-12">
        <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-gray-900">
          Latest from the Blog
        </h2>
        <p class="mt-3 sm:mt-4 text-base sm:text-lg text-gray-600 max-w-2xl mx-auto px-2">
          Thoughts on development, technology, and lessons learned along the way
        </p>
      </div>
      
      <!-- Featured Blog Post -->
      <div class="mb-8 sm:mb-12">
        <MostRecentBlog blog={mostRecentBlog} />
      </div>
      
      <!-- Other Blog Posts -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8 mb-6 sm:mb-8">
        {otherBlogs
          .slice(0, HOMEPAGE_BLOG_LIMIT)
          .map((blog) => <Card item={blog} type="blog" />)
        }
      </div>
      
      <div class="text-center">
        <a 
          href="/blogs" 
          class="inline-flex items-center px-6 py-3 border border-transparent text-sm sm:text-base font-medium rounded-lg text-white bg-blue-600 hover:bg-blue-700 transition-colors duration-200"
        >
          Read All Posts
          <svg class="ml-2 w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>
</Layout>
