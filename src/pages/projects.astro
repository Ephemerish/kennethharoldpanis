---
import Layout from "../layouts/MainLayout.astro";
import Card from "../components/Card.astro";
import FeaturedProject from "../components/FeaturedProject.astro";
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";

// Get all projects and sort by status and date
const allProjects: CollectionEntry<"projects">[] = (
  await getCollection("projects")
).sort((a, b) => {
  // Featured projects first
  if (a.data.featured && !b.data.featured) return -1;
  if (!a.data.featured && b.data.featured) return 1;
  
  // Then by status priority (completed, in-progress, planned)
  const statusPriority = { completed: 0, "in-progress": 1, planned: 2 };
  const statusDiff = statusPriority[a.data.status] - statusPriority[b.data.status];
  if (statusDiff !== 0) return statusDiff;
  
  // Finally by start date (newest first)
  return b.data.startDate.valueOf() - a.data.startDate.valueOf();
});

// Get featured projects
const featuredProjects = allProjects.filter(project => project.data.featured);
const regularProjects = allProjects.filter(project => !project.data.featured);

const pageTitle = "Projects";
---

<Layout title={pageTitle}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 sm:py-12">
    <!-- Header Section -->
    <div class="text-center mb-12 sm:mb-16">
      <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-4 sm:mb-6">
        Projects
      </h1>
      <p class="text-lg sm:text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed px-2">
        Things I've built and am working on.
      </p>
    </div>

    <!-- Featured Projects -->
    {featuredProjects.length > 0 && (
      <div class="mb-12 sm:mb-16">
        <h2 class="text-xl sm:text-2xl font-bold text-gray-900 mb-6 sm:mb-8 text-center sm:text-left">Featured Projects</h2>
        <div class="max-w-6xl mx-auto">
          {featuredProjects.map((project) => (
            <FeaturedProject project={project} />
          ))}
        </div>
      </div>
    )}

    <!-- Regular Projects Grid -->
    {regularProjects.length > 0 && (
      <div class="mb-12 sm:mb-16">
        <h2 class="text-xl sm:text-2xl font-bold text-gray-900 mb-6 sm:mb-8 text-center sm:text-left">
          {featuredProjects.length > 0 ? "Other Projects" : "All Projects"}
        </h2>
        <div class="grid grid-cols-1 gap-6 sm:gap-8 sm:grid-cols-2 lg:grid-cols-3">
          {regularProjects.map((project) => (
            <Card item={project} type="project" />
          ))}
        </div>
      </div>
    )}

    <!-- Empty State -->
    {allProjects.length === 0 && (
      <div class="text-center py-12 sm:py-16 px-4">
        <div class="text-gray-400 mb-4">
          <svg class="w-16 h-16 sm:w-24 sm:h-24 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
          </svg>
        </div>
        <h3 class="text-lg sm:text-xl font-semibold text-gray-600 mb-2">No projects found</h3>
        <p class="text-gray-500 text-sm sm:text-base">
          No projects available at the moment.
        </p>
      </div>
    )}

    <!-- Call to Action -->
    <div class="text-center mt-12 sm:mt-16 p-6 sm:p-8 bg-gray-50 rounded-lg mx-2 sm:mx-0">
      <h3 class="text-xl sm:text-2xl font-bold text-gray-900 mb-3 sm:mb-4">Looking for a Software Engineer?</h3>
      <p class="text-gray-600 mb-4 sm:mb-6 text-sm sm:text-base px-2">
        Available for frontend development roles and projects requiring Computer Engineering expertise.
      </p>
      <a 
        href="/contact" 
        class="inline-block px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium text-sm sm:text-base"
      >
        Get In Touch
      </a>
    </div>
  </div>
</Layout>
