    </div>

    <!-- Key Features -->
    {project.data.keyFeatures && project.data.keyFeatures.length > 0 && (
      <div class="mb-12">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Key Features</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
