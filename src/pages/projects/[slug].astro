            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          Technologies
        </h3>
        <Tags tags={project.data.tags} />
      </div>

      <!-- Category Card -->
      <div class="bg-white p-6 rounded-lg shadow-md border">
        <h3 class="font-semibold text-gray-900 mb-3 flex items-center">
          <svg class="w-5 h-5 mr-2 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
          </svg>
          Category
        </h3>
        <span class={`inline-block px-3 py-1 rounded-full text-sm font-medium ${categoryColors[project.data.category]}`}>
          {categoryText[project.data.category]}
        </span>
      </div>
    </div>

    <!-- Key Features -->
    {project.data.keyFeatures && project.data.keyFeatures.length > 0 && (
      <div class="mb-12">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Key Features</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          {project.data.keyFeatures.map((feature) => (
            <div class="flex items-start">
              <svg class="w-5 h-5 text-gray-700 mr-3 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-gray-700">{feature}</span>
            </div>
          ))}
        </div>
      </div>
    )}

    <!-- Technologies Used -->
    {project.data.technologies && project.data.technologies.length > 0 && (
      <div class="mb-12">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Technologies Used</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          {project.data.technologies.map((tech) => (
            <div class="bg-gray-50 p-4 rounded-lg border">
              <div class="font-medium text-gray-900">{tech}</div>
            </div>
          ))}
        </div>
      </div>
    )}

    <!-- Challenges -->
    {project.data.challenges && project.data.challenges.length > 0 && (
      <div class="mb-12">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Challenges Overcome</h2>
        <div class="space-y-4">
          {project.data.challenges.map((challenge, index) => (
            <div class="flex items-start">
              <div class="bg-gray-200 text-black rounded-full w-6 h-6 flex items-center justify-center text-sm font-medium mr-4 mt-0.5 shrink-0">
                {index + 1}
              </div>
              <p class="text-gray-700">{challenge}</p>
            </div>
          ))}
        </div>
      </div>
    )}

    <!-- Project Team & Institution -->
    {(project.data.team || project.data.institution || project.data.supervisor || project.data.researchArea) && (
      <div class="mb-12">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Project Information</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {project.data.team && project.data.team.length > 0 && (
            <div class="bg-white p-6 rounded-lg shadow-md border">
              <h3 class="font-semibold text-gray-900 mb-3 flex items-center">
                <svg class="w-5 h-5 mr-2 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
                Team Members
              </h3>
              <div class="space-y-2">
                {project.data.team.map((member) => (
                  <div class="text-gray-700">{member}</div>
                ))}
              </div>
            </div>
          )}
          
          {project.data.institution && (
            <div class="bg-white p-6 rounded-lg shadow-md border">
              <h3 class="font-semibold text-gray-900 mb-3 flex items-center">
                <svg class="w-5 h-5 mr-2 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                </svg>
                Institution
              </h3>
              <div class="text-gray-700">{project.data.institution}</div>
            </div>
          )}
          
          {project.data.supervisor && (
            <div class="bg-white p-6 rounded-lg shadow-md border">
              <h3 class="font-semibold text-gray-900 mb-3 flex items-center">
                <svg class="w-5 h-5 mr-2 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                Supervisor
              </h3>
              <div class="text-gray-700">{project.data.supervisor}</div>
            </div>
          )}
          
          {project.data.researchArea && (
            <div class="bg-white p-6 rounded-lg shadow-md border">
              <h3 class="font-semibold text-gray-900 mb-3 flex items-center">
                <svg class="w-5 h-5 mr-2 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                </svg>
                Research Area
              </h3>
              <div class="text-gray-700">{project.data.researchArea}</div>
            </div>
          )}
        </div>
      </div>
    )}

    <!-- Project Content -->
    <article class="
      text-gray-700 text-sm sm:text-base lg:text-lg leading-6 sm:leading-7 lg:leading-8 font-light
      [&>h1]:text-xl [&>h1]:sm:text-2xl [&>h1]:font-medium [&>h1]:text-gray-900 [&>h1]:mt-6 [&>h1]:sm:mt-8 [&>h1]:mb-3 [&>h1]:sm:mb-4 [&>h1]:tracking-tight [&>h1]:pb-2 [&>h1]:border-b [&>h1]:border-gray-100
      [&>h2]:text-lg [&>h2]:sm:text-xl [&>h2]:font-semibold [&>h2]:text-white [&>h2]:mt-5 [&>h2]:sm:mt-6 [&>h2]:mb-2 [&>h2]:sm:mb-3 [&>h2]:tracking-tight [&>h2]:bg-linear-to-r [&>h2]:from-slate-700 [&>h2]:to-slate-800 [&>h2]:px-3 [&>h2]:sm:px-4 [&>h2]:py-2 [&>h2]:sm:py-3 [&>h2]:rounded-lg [&>h2]:border-l-4 [&>h2]:border-gray-400 [&>h2]:cursor-pointer [&>h2]:hover:from-slate-600 [&>h2]:hover:to-slate-700 [&>h2]:hover:border-gray-500 [&>h2]:transition-all [&>h2]:duration-200 [&>h2]:relative [&>h2]:pr-8 [&>h2]:shadow-md [&>h2]:hover:shadow-lg
      [&>h3]:text-base [&>h3]:sm:text-lg [&>h3]:font-semibold [&>h3]:text-gray-800 [&>h3]:mt-4 [&>h3]:sm:mt-5 [&>h3]:mb-2 [&>h3]:sm:mb-3 [&>h3]:tracking-tight [&>h3]:bg-linear-to-r [&>h3]:from-gray-50 [&>h3]:to-gray-100 [&>h3]:px-3 [&>h3]:sm:px-4 [&>h3]:py-2 [&>h3]:sm:py-2.5 [&>h3]:rounded-lg [&>h3]:border [&>h3]:border-gray-200 [&>h3]:border-l-4 [&>h3]:border-l-gray-400 [&>h3]:cursor-pointer [&>h3]:hover:from-gray-100 [&>h3]:hover:to-gray-200 [&>h3]:hover:border-gray-300 [&>h3]:hover:border-l-gray-500 [&>h3]:transition-all [&>h3]:duration-200 [&>h3]:relative [&>h3]:pr-8 [&>h3]:shadow-sm [&>h3]:hover:shadow-md
