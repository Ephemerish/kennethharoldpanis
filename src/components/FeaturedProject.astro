---
import type { CollectionEntry } from "astro:content";
import Tags from "./Tags.astro";

const { project } = Astro.props;

interface Props {
  project: CollectionEntry<"projects">;
}

const statusColors = {
  completed: "bg-green-100 text-green-800",
  "in-progress": "bg-blue-100 text-blue-800", 
  planned: "bg-gray-100 text-gray-800"
};

const statusText = {
  completed: "Completed",
  "in-progress": "In Progress",
  planned: "Planned"
};
---

<div class="bg-white rounded-lg overflow-hidden shadow-xl mb-12">
  <div class="lg:flex">
    <div class="lg:w-1/2">
      <a href={"/projects/" + project.slug}>
        <img
          src={"/images/" + project.data.image}
          alt={project.data.title}
          class="w-full h-64 lg:h-full object-cover hover:opacity-75 transition duration-300 ease-in-out"
        />
      </a>
    </div>
    <div class="lg:w-1/2 p-8">
      <div class="flex items-center gap-2 mb-3">
        <span class="bg-yellow-100 text-yellow-800 px-2 py-1 rounded-full text-xs font-medium">
          Featured
        </span>
        <span class={`px-2 py-1 rounded-full text-xs font-medium ${statusColors[project.data.status]}`}>
          {statusText[project.data.status]}
        </span>
      </div>
      
      <h2 class="text-3xl font-bold mb-4">
        <a href={"/projects/" + project.slug} class="hover:text-blue-600 transition-colors">
          {project.data.title}
        </a>
      </h2>
      
      <p class="text-gray-600 mb-6 leading-relaxed">
        {project.data.description}
      </p>
      
      <div class="flex flex-wrap gap-3 mb-6">
        {project.data.demoUrl && (
          <a 
            href={project.data.demoUrl} 
            target="_blank" 
            rel="noopener noreferrer"
            class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors font-medium inline-flex items-center"
          >
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
            Live Demo
          </a>
        )}
        {project.data.videoUrl && (
          <a 
            href={project.data.videoUrl} 
            target="_blank" 
            rel="noopener noreferrer"
            class="bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700 transition-colors font-medium inline-flex items-center"
          >
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h1.586a1 1 0 01.707.293l2.414 2.414a1 1 0 00.707.293H15M9 10v4a2 2 0 002 2h2a2 2 0 002-2v-4M9 10V9a2 2 0 012-2h2a2 2 0 012 2v1" />
            </svg>
            Watch Demo
          </a>
        )}
        {project.data.githubUrl && (
          <a 
            href={project.data.githubUrl} 
            target="_blank" 
            rel="noopener noreferrer"
            class="border border-gray-300 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-50 transition-colors font-medium inline-flex items-center"
          >
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            View Code
          </a>
        )}
        <a 
          href={"/projects/" + project.slug}
          class="border border-blue-600 text-blue-600 px-4 py-2 rounded-lg hover:bg-blue-50 transition-colors font-medium"
        >
          Learn More
        </a>
      </div>
      
      <Tags tags={project.data.tags} />
    </div>
  </div>
</div>
