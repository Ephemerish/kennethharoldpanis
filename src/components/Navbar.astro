---
import ThemeToggle from "./ThemeToggle.astro";
---

<nav class="sticky top-0 z-50 w-full bg-card-gradient/95 backdrop-blur-md shadow-elegant border-b border-neutral-200/50">
  <div class="max-w-full px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between">
      <!-- Logo/Name with Enhanced Styling -->
      <div class="shrink-0">
        <a
          href="/"
          class="text-xl font-bold text-brand-gradient hover:scale-105 transition-transform duration-200"
        >
          Kenneth Harold Panis
        </a>
      </div>

      <!-- Desktop Navigation with Enhanced Styling -->
      <div class="hidden md:block">
        <div class="ml-10 flex items-center space-x-2">
          <a href="/" class="relative group rounded-xl px-4 py-2 text-sm font-medium text-neutral-700 hover:text-brand-600 hover:bg-brand-50/50 transition-all duration-200">
            <span class="relative z-10">Home</span>
            <div class="absolute inset-0 rounded-xl bg-brand-gradient opacity-0 group-hover:opacity-10 transition-opacity duration-200"></div>
          </a>
          <a href="/projects" class="relative group rounded-xl px-4 py-2 text-sm font-medium text-neutral-700 hover:text-brand-600 hover:bg-brand-50/50 transition-all duration-200">
            <span class="relative z-10">Projects</span>
            <div class="absolute inset-0 rounded-xl bg-brand-gradient opacity-0 group-hover:opacity-10 transition-opacity duration-200"></div>
          </a>
          <a href="/blogs" class="relative group rounded-xl px-4 py-2 text-sm font-medium text-neutral-700 hover:text-brand-600 hover:bg-brand-50/50 transition-all duration-200">
            <span class="relative z-10">Blogs</span>
            <div class="absolute inset-0 rounded-xl bg-brand-gradient opacity-0 group-hover:opacity-10 transition-opacity duration-200"></div>
          </a>
          <a href="/contact" class="relative group rounded-xl px-4 py-2 text-sm font-medium text-neutral-700 hover:text-brand-600 hover:bg-brand-50/50 transition-all duration-200">
            <span class="relative z-10">Contact</span>
            <div class="absolute inset-0 rounded-xl bg-brand-gradient opacity-0 group-hover:opacity-10 transition-opacity duration-200"></div>
          </a>
          <div class="ml-4">
            <ThemeToggle />
          </div>
        </div>
      </div>

      <!-- Mobile menu button with Enhanced Styling -->
      <div class="flex md:hidden items-center space-x-3">
        <ThemeToggle />
        <button
          type="button"
          class="mobile-menu-button inline-flex items-center justify-center rounded-xl p-2 text-neutral-600 hover:text-brand-600 hover:bg-brand-50/50 transition-all duration-200"
          aria-controls="mobile-menu"
          aria-expanded="false"
        >
          <span class="sr-only">Open main menu</span>
          <svg class="menu-icon block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <svg class="close-icon hidden h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile menu -->
  <div class="mobile-menu hidden md:hidden" id="mobile-menu">
    <div class="space-y-1 px-2 pb-3 pt-2">
      <a href="/" class="block rounded-md px-3 py-2 text-base font-medium text-foreground hover:bg-muted hover:text-foreground">
        Home
      </a>
      <a href="/projects" class="block rounded-md px-3 py-2 text-base font-medium text-foreground hover:bg-muted hover:text-foreground">
        Projects
      </a>
      <a href="/blogs" class="block rounded-md px-3 py-2 text-base font-medium text-foreground hover:bg-muted hover:text-foreground">
        Blogs
      </a>
      <a href="/contact" class="block rounded-md px-3 py-2 text-base font-medium text-foreground hover:bg-muted hover:text-foreground">
        Contact
      </a>
      <div class="px-3 py-2">
        <ThemeToggle />
      </div>
    </div>
  </div>
</nav>

<script>
  // Mobile menu toggle functionality
  document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuButton = document.querySelector('.mobile-menu-button');
    const mobileMenu = document.querySelector('.mobile-menu');
    const menuIcon = document.querySelector('.menu-icon');
    const closeIcon = document.querySelector('.close-icon');

    if (mobileMenuButton && mobileMenu && menuIcon && closeIcon) {
      mobileMenuButton.addEventListener('click', function() {
        const isExpanded = mobileMenuButton.getAttribute('aria-expanded') === 'true';
        
        mobileMenuButton.setAttribute('aria-expanded', String(!isExpanded));
        mobileMenu.classList.toggle('hidden');
        menuIcon.classList.toggle('hidden');
        closeIcon.classList.toggle('hidden');
      });
    }
  });

  // Handle Astro view transitions
  document.addEventListener('astro:after-swap', () => {
    // Re-initialize mobile menu after page transitions
    const mobileMenu = document.querySelector('.mobile-menu');
    if (mobileMenu && !mobileMenu.classList.contains('hidden')) {
      mobileMenu.classList.add('hidden');
    }
  });
</script>
