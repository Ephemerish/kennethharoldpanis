---
import { capitalize } from "../utils";

const { tags } = Astro.props;

interface Props {
  tags: string[];
}
---

<div class="flex flex-wrap gap-2">
  {
    tags.map((tag: string) => (
      <a 
        href={`/blogs?tag=${encodeURIComponent(tag)}`}
        class="inline-flex items-center px-3 py-1.5 bg-blue-50 text-blue-700 rounded-full text-xs font-medium hover:bg-blue-100 hover:text-blue-800 border border-blue-100 hover:border-blue-200"
      >
        <span class="w-1.5 h-1.5 bg-blue-400 rounded-full mr-1.5"></span>
        {capitalize(tag)}
      </a>
    ))
  }
</div>
