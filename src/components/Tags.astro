---
import { capitalize } from "../utils";

const { tags } = Astro.props;

interface Props {
  tags: string[];
}

// should be clickable in the future and navigate to a tag page
---

<div class="flex flex-wrap">
  {
    tags.map((tag: string) => (
      <span 
        class="inline-flex items-center px-3 py-1.5 bg-neutral-100 text-neutral-900 rounded-full text-xs font-medium border border-neutral-200 mr-1 mb-1"
      >
        <span class="w-1.5 h-1.5 bg-brand-500 rounded-full mr-1.5"></span>
        {capitalize(tag)}
      </span>
    ))
  }
</div>
