---
import { formatDate } from "../utils";
import type { CollectionEntry } from "astro:content";
import { Image } from 'astro:assets';

interface Props {
  blog: CollectionEntry<"blog">;
}

const { blog } = Astro.props;
---

<div class="relative w-full group cursor-pointer rounded-3xl overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-500 transform hover:scale-[1.02]">
  <a href={"/blogs/" + blog.slug} class="block">
    <div class="relative">
      <Image
        src={"/images/" + blog.data.image}
        alt={blog.data.title}
        class="w-full h-[400px] sm:h-[500px] lg:h-[600px] object-cover"
        width={800}
        height={600}
        loading="eager"
      />
      
      <!-- Gradient overlay -->
      <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-transparent"></div>
      
      <!-- Featured badge -->
      <div class="absolute top-6 left-6 bg-blue-600 text-white px-4 py-2 rounded-full text-sm font-semibold shadow-lg">
        ‚≠ê Featured Post
      </div>
      
      <!-- Content overlay -->
      <div class="absolute inset-0 flex flex-col justify-end p-8 sm:p-12 text-white">
        <div class="max-w-4xl">
          <!-- Category/Type indicator -->
          <div class="mb-4">
            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-white/20 backdrop-blur-sm text-white">
              üìù Latest Blog Post
            </span>
          </div>
          
          <!-- Title -->
          <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold mb-4 leading-tight group-hover:text-blue-200 transition-colors duration-300">
            {blog.data.title}
          </h1>
          
          <!-- Meta info -->
          <div class="flex flex-wrap items-center gap-4 mb-6 text-gray-200">
            <time class="flex items-center gap-2 text-lg">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              {formatDate(blog.data.pubDate)}
            </time>
            
            {blog.data.author && (
              <div class="flex items-center gap-2 text-lg">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
                <span>by {blog.data.author}</span>
              </div>
            )}
          </div>
          
          <!-- Tags -->
          <div class="flex flex-wrap gap-2 mb-6">
            {blog.data.tags.slice(0, 4).map((tag) => (
              <span class="px-3 py-1 bg-white/20 backdrop-blur-sm text-white rounded-full text-sm font-medium hover:bg-white/30 transition-colors duration-200">
                {tag}
              </span>
            ))}
            {blog.data.tags.length > 4 && (
              <span class="px-3 py-1 bg-white/20 backdrop-blur-sm text-white rounded-full text-sm font-medium">
                +{blog.data.tags.length - 4} more
              </span>
            )}
          </div>
          
          <!-- CTA -->
          <div class="flex items-center justify-between">
            <div class="flex items-center text-white group-hover:text-blue-200 transition-colors duration-300">
              <span class="text-lg font-semibold mr-3">Read Full Article</span>
              <svg class="w-6 h-6 group-hover:translate-x-2 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </div>
          </div>
        </div>
      </div>
    </div>
  </a>
</div>
